<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog.kodeakses"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#2f4159">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2f4159"
        app:cardCornerRadius="5dp"
        android:elevation="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Kode Akses"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="10dp" />
    </android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#3f5169"
        android:textColorHint="#ccd8e8"
        android:padding="5dp"
        app:hintEnabled="false"
        android:id="@+id/dialog.textInputLayout.kodeAkses">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Kode Akses"
            android:id="@+id/dialog.editText.kodeAkses"
            android:inputType="textPassword"
            android:textColor="#ffff"
            android:textColorHint="#ccd8e8"
            android:backgroundTint="#3f5169"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:weightSum="2"
        android:layout_marginTop="10dp">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="Cancel"
            android:background="#ff5722"
            android:hapticFeedbackEnabled="true"
            android:onClick="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:textColor="#fff"
            android:id="@+id/dialog.button.cancel"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_gravity="bottom"
            android:text="Submit"
            android:hapticFeedbackEnabled="true"
            android:onClick="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:textColor="#fff"
            android:background="#009688"
            android:id="@+id/dialog.button.submit"/>
    </LinearLayout>

</LinearLayout>