<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.fragment_CekSaldo">
    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:clickable="true"
        app:cardCornerRadius="14dp"

        android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="346dp"
            android:orientation="vertical"
            android:background="#ff4"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"

                android:weightSum="1"
                android:layout_weight="0.12">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="133dp"
                    android:layout_height="26dp"
                    android:src="@drawable/maskot"/>

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="96dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/halfcircle" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:textSize="20dp"
                    android:text="Ballance"
                    android:layout_marginBottom="10dp" />


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/garisbawah"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>


            <TextView
                android:id="@+id/fragment.transfer.textView.saldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:paddingTop="0dp"
                android:text="Saldo"
                android:gravity="center"
                android:textSize="50sp"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>
